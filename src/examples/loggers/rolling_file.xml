<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="Default" status="warn">
    <Appenders>
        <RollingFile
                name="file"
                fileName="logs/miner.log"
                filePattern="logs/miner.log.%d{yyyy-MM-dd}.gz"
                ignoreExceptions="false">
            <PatternLayout>
                <Pattern>%date{ISO8601} %level %X{streamer_name} - %message%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger level="info" name="fr.raksrinana.channelpointsminer" additivity="false">
            <AppenderRef ref="file"/>
        </Logger>
        <Root level="warn" additivity="false">
            <AppenderRef ref="file"/>
        </Root>
    </Loggers>
</Configuration>
